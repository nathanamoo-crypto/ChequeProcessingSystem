@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">Welcome to ARB Apex Bank Cheque Processing System</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Cheques</h5>
                <p class="card-text">@Model.TotalCheques</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Cleared Cheques</h5>
                <p class="card-text">@Model.ClearedCheques</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Pending Cheques</h5>
                <p class="card-text">@Model.PendingCheques</p>
            </div>
        </div>
    </div>
</div>

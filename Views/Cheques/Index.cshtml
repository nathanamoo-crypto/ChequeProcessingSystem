@model ChequeProcessingSystem.Models.ViewModels.DashboardViewModel

<h2>Cheques Dashboard</h2>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-light border-primary mb-3">
            <div class="card-body text-center">
                <h5>Total</h5>
                <h3>@Model.TotalCheques</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-light border-success mb-3">
            <div class="card-body text-center">
                <h5>Cleared</h5>
                <h3>@Model.ClearedCheques</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-light border-danger mb-3">
            <div class="card-body text-center">
                <h5>Bounced</h5>
                <h3>@Model.BouncedCheques</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-light border-warning mb-3">
            <div class="card-body text-center">
                <h5>Pending</h5>
                <h3>@Model.PendingCheques</h3>
            </div>
        </div>
    </div>
</div>

@if (Model.Cheques == null || !Model.Cheques.Any())
{
    <p>No cheques available.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Cheque Number</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Account Holder</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cheque in Model.Cheques)
            {
                <tr>
                    <td>@cheque.ChequeNumber</td>
                    <td>@cheque.Amount.ToString("C")</td>
                    <td>@cheque.Status</td>
                    <td>@(cheque.Account?.HolderName ?? "Unknown")</td>
                </tr>
            }
        </tbody>
    </table>
}

@model ChequeProcessingSystem.Models.Cheque
@{
    ViewData["Title"] = "Create Cheque";
}

<h2>Create Cheque</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="ChequeNumber" class="form-label"></label>
        <input asp-for="ChequeNumber" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="IssueDate" class="form-label"></label>
        <input asp-for="IssueDate" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ExpiryDate" class="form-label"></label>
        <input asp-for="ExpiryDate" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="AccountId" class="form-label">Select Account</label>
        <select asp-for="AccountId" asp-items="ViewBag.Accounts" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@model ChequeProcessingSystem.Models.Account
@{
    ViewData["Title"] = "Edit Account";
}

<h2>Edit Account</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AccountId" />
    <div class="mb-3">
        <label asp-for="AccountNumber" class="form-label"></label>
        <input asp-for="AccountNumber" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="HolderName" class="form-label"></label>
        <input asp-for="HolderName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Balance" class="form-label"></label>
        <input asp-for="Balance" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Update</button>
</form>
